<section>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Amount</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td><img src="/product-images/{{this.products.[0]._id}}.jpg" alt="" style="height: 60px; width: 60px"></td>
                    <td>{{this.products.[0].Name}}</td>
                    <td>{{this.quantity}}</td>
                    <td>{{this.products.[0].Price}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>