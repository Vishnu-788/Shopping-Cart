<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card text-white bg-dark border-dark" style="width: 15rem; height: 24rem">
                    <div class="img m-3">
                        <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap"
                            style="height: 13rem;">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text"> {{this.Description}} </p>
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>